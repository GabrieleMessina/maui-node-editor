<?xml version="1.0" encoding="utf-8" ?>
<components:ExtendedContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiNodeEditor" 
             xmlns:components="clr-namespace:MauiNodeEditor.Utils.XamlComponent" 
             x:DataType="local:Node" 
             x:Class="MauiNodeEditor.Node">
    <Frame BorderColor="Gray" CornerRadius="5" Padding="0">
        <StackLayout Padding="0" Margin="0">
            <!--<Label Text="{Binding Title}" FontSize="14" FontAttributes="Bold" />-->
            <Label Text="{Binding TranslationX}" FontSize="10" />
            <Label Text="{Binding TranslationY}" FontSize="10" />
            <BoxView Color="Gray" HeightRequest="2" HorizontalOptions="Fill" />
            <Label Text="Frames can wrap more complex layouts to create more complex UI components, such as this card!"/>
            <local:InputHandle x:Name="inputHandle" VerticalOptions="Start" HorizontalOptions="Start"/>
        </StackLayout>
    </Frame>
</components:ExtendedContentView>
